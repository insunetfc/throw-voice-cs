{
  "name": "CaptureUserInput",
  "description": "Captures free-form Korean input into a single slot",
  "sampleUtterances": [
    {
      "utterance": "{UserInput}"
    },
    {
      "utterance": "{UserInput}입니다"
    },
    {
      "utterance": "{UserInput} 이에요"
    },
    {
      "utterance": "말씀드릴게요 {UserInput}"
    },
    {
      "utterance": "문의사항은 {UserInput}"
    }
  ],
  "intentClosingSetting": {
    "closingResponse": {
      "messageGroups": [
        {
          "message": {
            "plainTextMessage": {
              "value": "감사합니다. 요청을 접수했어요."
            }
          }
        }
      ],
      "allowInterrupt": true
    },
    "isActive": true
  },
  "slotPriorities": [
    {
      "slotName": "UserInput",
      "priority": 1
    }
  ],
  "slots": [
    {
      "name": "UserInput",
      "slotTypeName": "AMAZON.AlphaNumeric",
      "valueElicitationSetting": {
        "slotConstraint": "Required",
        "promptSpecification": {
          "messageGroups": [
            {
              "message": {
                "plainTextMessage": {
                  "value": "원하시는 내용을 말씀해주세요."
                }
              }
            }
          ],
          "maxRetries": 2,
          "allowInterrupt": true
        }
      }
    }
  ],
  "fulfillmentCodeHook": {
    "enabled": false
  }
}
