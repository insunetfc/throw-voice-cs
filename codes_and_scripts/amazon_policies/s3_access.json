{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ListBucketForPrefix",
      "Effect": "Allow",
      "Action": ["s3:ListBucket", "s3:GetBucketLocation"],
      "Resource": "arn:aws:s3:::tts-bucket-250810",
      "Condition": { "StringLike": { "s3:prefix": ["connect/sessions/*"] } }
    },
    {
      "Sid": "RWOnObjectsUnderPrefix",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:AbortMultipartUpload"
      ],
      "Resource": "arn:aws:s3:::tts-bucket-250810/*"
    }
  ]
}
